{{#buttonVideo}}
  <a href="{{modalVideoURL}}" target="_blank" class="mobile video-btn {{buttonClass}}">{{{buttonText}}}</a>
  <a href="#{{modalID}}" class="desktop video-btn {{buttonClass}}" data-toggle="modal">{{{buttonText}}}</a>
  <div id="{{modalID}}" class="modal fade modal-video">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">{{modalTitle}}</h4>
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        </div>
        <div class="modal-body">
          <div class="modal-body-video-wrap">
            <iframe width="160" height="90" class="modal-body-video-iframe" src="{{modalVideoURL}}" frameborder="0" allowfullscreen></iframe>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/buttonVideo}}